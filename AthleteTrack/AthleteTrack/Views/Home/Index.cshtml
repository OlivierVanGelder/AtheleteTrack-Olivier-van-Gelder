@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img class="mb-3" height="200px" src="~/img/FullLogoAthleteTrack.png"/>
    <div class="container text-center">
        <div class="row">
            <div class="col border-2">
                <input type="text" placeholder="Zoek een schema..."/>
                <button type="submit" class=" flex-grow-0 btn btn-dark"><img class="mb-1" height="15px" src="~/img/WhiteMagnifyingGlass.png" /></button>
            </div>
        </div>

        <div class="row m-4">
            <ul class="list-group">
                @{
                    for (int i =1; i <= 5; i++)
                    {
                        <li class="list-group-item me-5 ms-5">Schema @i</li>
                    }
                }
            </ul>
        </div>

    </div>
</div>
