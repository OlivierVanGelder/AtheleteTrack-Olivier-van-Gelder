@{
    ViewData["Title"] = "Trainingsschema";
}
<div class="container">
    <div class="row text-center mb-5">
        <div class="col">
            <h2>-Trainingsschema naam-</h2>
        </div>
    </div>
    <div class="row">
        <div class="col ms-5 me-5">
            <div class="row">
                <h4>Tijdsduur:</h4>
            </div>
            <div class="row border border-dark">
                <div class="row ms-2 mt-2">
                    <div class="col ms-2">
                        <h5>
                            Oefeningen
                        </h5>
                    </div>
                    <div class="col ms-2">
                        <h5>
                            Tijd
                        </h5>
                    </div>
                </div>
                <div class="row m-3 ms-2 mt-2">
                    <div class="col">
                        <ul class="list-group">
                            @{
                                for (int i = 1; i <= 3; i++)
                                {
                                    <li class="list-group-item me-2 ms-2">Oefening @i</li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="col">
                        <ul class="list-group">
                            @{
                                for (int i = 1; i <= 3; i++)    
                                {
                                    <li class="list-group-item me-2 ms-2">1@(i):00</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col ms-5 me-5">
            <div class="row">
                <h4>Info:</h4>
            </div>
            <div class="row border border-dark">
                <div class="row ms-3 mt-3">
                    <h6>Repetities:</h6>
                </div>
                <div class="row ms-3 mt-2 mb-3">
                    <h6>Beschrijving:</h6>
                </div>
            </div>
        </div>
    </div>
</div5